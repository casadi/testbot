      export CXX_FULL=/usr/local/Cellar/gcc@4.9/4.9.4_1/lib/gcc/4.9/libstdc++.6.dylib
      
      ls $FORTRAN_FULL_ALT
      ls $FORTRAN_FULL
      ls $QUADMATH_FULL_ALT
      ls $QUADMATH_FULL
      ls $GCC_FULL_ALT
      ls $GCC_FULL
      ls $GOMP_FULL_ALT
      ls $GOMP_FULL
