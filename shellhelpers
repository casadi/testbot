function allowfail() {
        ERR=$?
        for var in "$@"
        do
        if [ $ERR -eq $var ]
        then
                $(exit 0);
                return;
        fi
        done
        $(exit $ERR);
}

function assertfail() {
        ERR=$?
        if [ $ERR -eq "0" ]
        then
                $(exit 1);
                return;
        fi
        $(exit 0);
}

